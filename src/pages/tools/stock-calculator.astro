---
import Layout from '../../layouts/Layout.astro';
import StockCalculator from '../../components/calculators/StockCalculator.vue';

const title = "股票損益計算機 (2026版)｜TaiCalc";
const description = "2026 最新股票交易成本計算：手續費、證交稅、當沖稅率優惠。支援現股、當沖、ETF 交易成本試算，精準掌握獲利。";
---

<Layout title={title} description={description}>
    <!-- Breadcrumb -->
    <div class="text-sm text-stone-500 mb-8 flex items-center gap-2">
        <a href="/" class="hover:text-stone-800 transition-colors">首頁</a>
        <span>/</span>
        <a href="/categories/tools" class="hover:text-stone-800 transition-colors">工具</a>
        <span>/</span>
        <span class="text-stone-800 font-medium">股票損益計算</span>
    </div>

    <header class="mb-8">
        <div class="flex items-center justify-between mb-2">
            <h1 class="text-2xl sm:text-3xl font-bold text-stone-800 tracking-tight">股票損益計算機</h1>
            <span class="text-xs px-2.5 py-1 rounded-full bg-red-100 text-red-700 border border-red-200 font-medium">2026年版</span>
        </div>
        <p class="text-stone-500 text-sm">支援現股 (0.3%)、當沖 (0.15%)、ETF (0.1%) 稅率計算。</p>
    </header>

    <StockCalculator client:load />
</Layout>
