---
import Layout from '../../layouts/Layout.astro';
import RetirementCalculator from '../../components/calculators/RetirementCalculator.vue';

const title = "退休規劃計算｜TaiCalc";
const description = "計算退休所需金額與每月儲蓄目標，規劃財務自由之路，支援4%法則試算。";
---

<Layout title={title} description={description}>
    <!-- Breadcrumb -->
    <div class="text-sm text-stone-500 mb-8 flex items-center gap-2">
        <a href="/" class="hover:text-stone-800 transition-colors">首頁</a>
        <span>/</span>
        <a href="/categories/finance" class="hover:text-stone-800 transition-colors">退休理財</a>
        <span>/</span>
        <span class="text-stone-800 font-medium">退休規劃</span>
    </div>

    <header class="mb-8">
        <div class="flex items-center justify-between mb-2">
            <h1 class="text-2xl sm:text-3xl font-bold text-stone-800 tracking-tight">退休規劃計算</h1>
            <span class="text-xs px-2.5 py-1 rounded-full bg-blue-100 text-blue-700 border border-blue-200 font-medium">財務自由</span>
        </div>
        <p class="text-stone-500 text-sm">計算退休金缺口與每月儲蓄目標</p>
    </header>

    <RetirementCalculator client:load />  
</Layout>
