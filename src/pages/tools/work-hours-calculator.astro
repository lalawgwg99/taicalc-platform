---
import Layout from '../../layouts/Layout.astro';
import WorkHoursCalculator from '../../components/calculators/WorkHoursCalculator.vue';

const title = "工時計算｜薪資試算｜TaiCalc";
const description = "計算上班時數與薪資，適用於時薪、兼職、計時工作者。週排班視覺化與薪資預估。";
---

<Layout title={title} description={description}>
    <!-- Breadcrumb -->
    <div class="text-sm text-stone-500 mb-6 flex items-center gap-2">
        <a href="/" class="hover:text-stone-800 transition-colors">首頁</a>
        <span>/</span>
        <a href="/categories/life" class="hover:text-stone-800 transition-colors">生活計算</a>
        <span>/</span>
        <span class="text-stone-900 font-medium">工時計算</span>
    </div>

    <header class="mb-8">
        <div class="flex items-center justify-between mb-2">
            <h1 class="text-2xl sm:text-3xl font-bold text-stone-800 tracking-tight">工時排班計算</h1>
            <span class="text-xs px-2.5 py-1 rounded-full bg-sky-100 text-sky-700 border border-sky-200 font-medium">
                週排班
            </span>
        </div>
        <p class="text-stone-500 text-sm">一週工時統計 · 薪資預估 · 視覺化班表</p>
    </header>

    <WorkHoursCalculator client:load />
</Layout>
