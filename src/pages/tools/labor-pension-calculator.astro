---
import Layout from '../../layouts/Layout.astro';
import LaborPensionCalculator from '../../components/calculators/LaborPensionCalculator.vue';

const title = "2026 勞退試算極致版｜舊制/新制退休金｜TaiCalc";
const description = "2026最新勞工退休金試算。視覺化複利成長曲線，精算自提6%節稅效益，並預估退休後每月可領金額。";
---

<Layout title={title} description={description}>
    <!-- Breadcrumb -->
    <div class="text-sm text-stone-500 mb-8 flex items-center gap-2">
        <a href="/" class="hover:text-stone-800 transition-colors">首頁</a>
        <span>/</span>
        <a href="/categories/finance" class="hover:text-stone-800 transition-colors">退休理財</a>
        <span>/</span>
        <span class="text-stone-800 font-medium">勞退試算</span>
    </div>

    <header class="mb-10">
        <div class="flex items-center justify-between mb-4">
            <h1 class="text-3xl font-bold text-stone-900 tracking-tight">勞退試算</h1>
            <span class="text-xs px-2.5 py-1 rounded-full bg-amber-100 text-amber-700 border border-amber-200 font-medium">自提效益</span>
        </div>
        <p class="text-stone-500 text-sm">自提節稅效益與退休月領預估</p>
    </header>

    <LaborPensionCalculator client:load />  
</Layout>
