---
import Layout from '../../layouts/Layout.astro';
import ElectricityCalculator from '../../components/calculators/ElectricityCalculator.vue';

const title = "電費計算機｜台電累進電價試算｜TaiCalc";
const description = "2024台電累進電價計算，夏月/非夏月費率。含級距分析、省電模擬、冷氣耗電試算。";
---

<Layout title={title} description={description}>
    <!-- Breadcrumb -->
    <div class="text-sm text-stone-500 mb-6 flex items-center gap-2">
        <a href="/" class="hover:text-stone-800 transition-colors">首頁</a>
        <span>/</span>
        <a href="/categories/life" class="hover:text-stone-800 transition-colors">生活計算</a>
        <span>/</span>
        <span class="text-stone-900 font-medium">電費試算</span>
    </div>

    <header class="mb-8">
        <div class="flex items-center justify-between mb-2">
            <h1 class="text-2xl sm:text-3xl font-bold text-stone-800 tracking-tight">電費試算</h1>
            <span
                class="text-xs px-2.5 py-1 rounded-full bg-amber-100 text-amber-700 border border-amber-200 font-medium">台電費率</span>
        </div>
        <p class="text-stone-500 text-sm">累進費率 · 夏月/非夏月 · 耗電估算</p>
    </header>

    <ElectricityCalculator client:load />
</Layout>
