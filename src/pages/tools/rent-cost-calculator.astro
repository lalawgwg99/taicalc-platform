---
import Layout from '../../layouts/Layout.astro';
import RentCostCalculator from '../../components/calculators/RentCostCalculator.vue';

const title = "租金成本計算｜TaiCalc";
const description = "計算租屋真實成本，包含押金機會成本與隱藏費用。";
---

<Layout title={title} description={description}>
   <!-- Breadcrumb -->
    <div class="text-sm text-stone-500 mb-8 flex items-center gap-2">
        <a href="/" class="hover:text-stone-800 transition-colors">首頁</a>
        <span>/</span>
        <a href="/categories/life" class="hover:text-stone-800 transition-colors">生活計算</a>
        <span>/</span>
        <span class="text-stone-900 font-medium">租金成本</span>
    </div>

    <header class="mb-8">
        <div class="flex items-center justify-between mb-2">
            <h1 class="text-2xl sm:text-3xl font-bold text-stone-800 tracking-tight">租金成本計算</h1>
            <span class="text-xs px-2.5 py-1 rounded-full bg-emerald-100 text-emerald-700 border border-emerald-200 font-medium">真實開銷</span>
        </div>
        <p class="text-stone-500 text-sm">含押金機會成本與隱藏費用試算</p>
    </header>

    <RentCostCalculator client:load />  
</Layout>
