---
import '../styles/global.css';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';

interface Props {
	title: string;
    description?: string;
}

const { title, description = "專為台灣人設計的免費財務計算機。整合 2026 最新勞健保費率、薪資扣除額、房貸試算、加班費規則與 FIRE 退休規劃。" } = Astro.props;
---

<!DOCTYPE html>
<html lang="zh-TW">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
        <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Noto+Sans+TC:wght@300;400;500;700&display=swap" rel="stylesheet">
        <link rel="canonical" href={new URL(Astro.url.pathname, Astro.site)} />
        <!-- Google Tag Manager / Analytics could go here -->
	</head>
	<body class="antialiased bg-[#FAF3E0] text-[#1F2937] min-h-screen flex flex-col">
        <div class="max-w-6xl mx-auto px-6 py-8 w-full flex-grow flex flex-col">
            <Navbar />
            <main class="flex-grow">
		        <slot />
            </main>
            <Footer />
        </div>
	</body>
</html>
